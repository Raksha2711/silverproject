@model List<TaskItemViewModel>
@{
    ViewData["Title"] = "Home Page";
}
@{
    var approver = Model.Where(w => w.Approver == 0).ToList();
}
<!-- Content Wrapper. Contains page content -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-6">
                <h1>Dash Board</h1>
            </div>
            <div class="col-sm-6 d-none d-sm-block">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">Dash Board</li>
                </ol>
            </div>
        </div>
    </div>
</section>

<section class="content pb-3">
    <div class="container-fluid h-100">
        <div class="row">
            <div class="p-0 col card card-row card-default">
                <div class="card-header">
                    <h3 class="card-title">
                        Approver
                    </h3>
                </div>
                <div class="card-body pl-0 pr-0">
                    @foreach (var item in Model.Where(w => w.Approver == 0))
                    {
                        item.CanEdit = true;
                        <div class="card card-primary card-outline">
                            <partial name="~/Views/Home/_taskitem.cshtml" for="@item" />
                        </div>
                    }

                </div>
            </div>
            <div class="p-0 ml-1 mr-1 col card card-row card-default">
                <div class="card-header bg-orange">
                    <h3 class="card-title">
                        Purchase
                    </h3>
                </div>
                <div class="card-body pl-0 pr-0">
                    @foreach (var item in Model.Where(w => w.Approver == 1 && w.Purchase == 0))
                    {
                        item.CanEdit = true;
                        <div class="card card-primary card-outline">
                            <partial name="~/Views/Home/_taskitem.cshtml" for="@item" />
                        </div>
                    }
                </div>
            </div>
            <div class="p-0 col card card-row card-default">
                <div class="card-header bg-info">
                    <h3 class="card-title">
                        Account
                    </h3>
                </div>
                <div class="card-body pl-0 pr-0">
                    @foreach (var item in Model.Where(w => w.Approver == 1 && w.Purchase == 1 && w.Accounts == 0))
                    {
                        item.CanEdit = true;
                        <div class="card card-primary card-outline">
                            <partial name="~/Views/Home/_taskitem.cshtml" for="@item" />
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>

