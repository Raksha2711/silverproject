@model BillViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="x-ua-compatible" content="ie=edge" />
    <title>Silverline | Purchase Order Invoice</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">

    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
</head>
<body>
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Invoice</h1>
            </div>
        </div>
    </div>
</section>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">

                <!-- Main content -->
                <div class="invoice p-3 mb-3">
                    <!-- title row -->
                    <div class="row">
                        <div class="col-12">
                            <h4>
                                <i class="fas fa-globe"></i> Silverline, Inc.
                                <small class="float-right">Date: @Model.Date.Value.ToString("dd/MM/yyyy")</small>
                            </h4>
                        </div>
                        <!-- /.col -->
                    </div>
                    <!-- info row -->

                    <div class="row invoice-info">
                        <div class="col-sm-4 invoice-col">
                            From
                            <address>
                                <strong>@Model.VendorName</strong>
                                @if (!string.IsNullOrWhiteSpace(Model.VendorAddress))
                                {<br>@Model.VendorAddress;<br>}
                                @if (!string.IsNullOrWhiteSpace(Model.ContactNo))
                                {
                                    string.Format("Phone : {0} <br>", Model.ContactNo);
                                }
                                @if (!string.IsNullOrWhiteSpace(Model.Email))
                                {
                                    string.Format("Email : {0} <br>", Model.Email);
                                }
                            </address>

                        </div>
                        <!-- /.col -->
                        <div class="col-sm-4 invoice-col">
                            @if (Model.DelieveryPlaceId != null)
                            {
                                <address>
                                    <strong>To,@Model.WarehouseDetail.Name</strong><br>
                                    @Model.WarehouseDetail.Address<br>
                                </address>
                            }
                        </div>
                        <!-- /.col -->
                        <div class="col-sm-4 invoice-col">
                            <b>PO #@Model.No</b><br>
                            <br>
                            <b>Sales Person:</b> @Model.SalesPersoName<br>
                            <b>Payment Term:</b> @Model.PaymentTerm<br>
                        </div>
                        <!-- /.col -->
                    </div>


                    <div class="row">
                        <div class="col-12 table-responsive">
                            <table class="table table-striped auto-index">
                                <thead>
                                    <tr>
                                        <th>#NO</th>
                                        <th>Item</th>
                                        <th>Qty</th>
                                        <th>Basic Rate</th>
                                        <th>Add Cost</th>
                                        <th>CDC</th>
                                        <th>Discount1</th>
                                        <th>GST</th>
                                        <th>Scheme2</th>
                                        <th>SchemeAmt</th>
                                        <th>NLC</th>
                                        <th>Remarks</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.BillItemsView)
                                    {
                                        <tr>
                                            <td></td>
                                            <td>@item.ItemName</td>
                                            <td>@item.Qty</td>
                                            <td>@item.BasicRate</td>
                                            <td>@item.AddCost</td>
                                            <td>@item.CDC</td>
                                            <td>@item.Discount1</td>
                                            <td>@item.Scheme1</td>
                                            <td>@item.Scheme2</td>
                                            <td>@item.SchemeAmt</td>
                                            <td>@item.NLC</td>
                                            <td>@item.Remarks</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</section>

</body>
</html>