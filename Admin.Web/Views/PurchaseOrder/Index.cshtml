@model List<TaskItemViewModel>
@{
    ViewData["Title"] = "Item List";
}

@*List<Command.Entity1.Bill>*@
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>PO List</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">Purchase Order List</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>
    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-tools">
                                <div class="input-group input-group-sm">
                                    <input type="text" name="table_search" class="form-control float-right" placeholder="Search">
                                    <div class="input-group-append">
                                        <button type="submit" class="btn btn-default"><i class="fas fa-search"></i></button>
                                    </div>
                                    <div class="input-group-append">
                                        <a href="@Url.Action("Create","purchaseorder")" class="btn btn-default">
                                            <i class="fas fa-plus"></i>&nbsp; Add
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body table-responsive p-0" style="height: 500px;">
                            <table class="table table-head-fixed">
                                <thead>
                                    <tr>
                                        <th>PO No</th>
                                        <th>Date</th>
                                        <th>Vendor</th>
                                        <th>Sales Person</th>
                                        <th>Delivery Type</th>
                                        <th>Payment Term</th>
                                        <th>Approver</th>
                                        <th>Purchase</th>
                                        <th>Accounts</th>
                                        @*<th>Action</th>*@
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.No</td>
                                            <td>@Convert.ToString(string.Format("{0:dd/MM/yyyy}", @item.Date))</td>
                                            <td>@item.VendorName</td>
                                            <td>@item.SalesPersoName</td>
                                            <td>@item.DeliveryType</td>
                                            <td>@item.PaymentTerm</td>
                                            <td>
                                                @if (@item.Approver == 1)
{
                                                <i class="fa fa-check-circle" aria-hidden="true"></i>
}
                                                </td>
                                            <td>@if (@item.Purchase == 1) {<i class="fa fa-check-circle" aria-hidden="true"></i>}</td>
                                            <td>@if (@item.Accounts == 1) {<i class="fa fa-check-circle" aria-hidden="true"></i>}</td>
                                            @*<td>
                                                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                                                    | <a asp-action="Detail" asp-route-id="@item.Id">Detail</a>
                                                </td>*@
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                </div>
            </div>

        </div>
    </div>
