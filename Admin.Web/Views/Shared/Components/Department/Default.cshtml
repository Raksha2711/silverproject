@model Command.Entity1.Department
<form asp-controller="salesperson" asp-action="adddepartment" method="post">
    <div class="row">
        <div class="col-md-12">
            @Html.HiddenFor(m => m.Id)
            @Html.HiddenFor(m => m.ModifiedBy)
            @Html.HiddenFor(m => m.ModifiedDate)
            <div class="form-group">
                <label asp-for="Name">Name</label>
                <input type="text" asp-for="Name" class="form-control" placeholder="Enter Name" required="required" />
                <span asp-validation-for="Name"></span>
            </div>
        </div>
    </div>
    <div class="card-footer">
        <div class="card-tools">
            <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i>Save</button>
            <button type="submit" class="btn btn-primary" asp-controller="salesperson" asp-action="Index"><i class="fas fa-times"></i>Cancel</button>
        </div>
    </div>
</form>
