@using static Admin.Web.Helpers.NavigationIndicatorHelper;
@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
<aside class="main-sidebar sidebar-dark-primary elevation-4">
    <a href="~/Home" class="brand-link">
        <img src="~/img/logo.png" alt="AdminLTE Logo" class="logo-image">
    </a>
    <div class="sidebar">
        @if (SignInManager.IsSignedIn(User))
        {
            <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                <div class="image">
                    <img src="~/img/user2-160x160.jpg" class="img-circle elevation-2" alt="User Image">
                </div>
                <div class="info">
                    <a href="#" class="d-block">Hi, @User.Identity.Name </a>
                </div>
            </div>
        }
        else
        {
            <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                <div class="info">
                    <a href="#" class="d-block">Hi, Visit</a>
                </div>
            </div>
        }
        <nav class="mt-2">
            <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                <li class="nav-item ">
                    <a asp-controller="Home" asp-action="Index" class="nav-link @Url.MakeActiveClass("home","index")">
                        <i class="nav-icon fas fa-home"></i>
                        <p>
                            Dash Board
                        </p>
                    </a>
                </li>
                <li class="nav-item ">
                    <a asp-controller="PurchaseOrder" asp-action="Index" class="nav-link @Url.MakeActiveClass("PurchaseOrder","index")">
                        <i class="nav-icon fas fa-file-invoice"></i>
                        <p>
                            Purchase Order
                        </p>
                    </a>
                </li>
                <li class="nav-item ">
                    <a asp-controller="Vendor" asp-action="Index" class="nav-link @Url.MakeActiveClass("Vendor","index")">
                        <i class="nav-icon fas fa-user"></i>
                        <p>
                            Vendor
                        </p>
                    </a>
                </li>
                <li class="nav-item ">
                    <a asp-controller="Item" asp-action="Index" class="nav-link @Url.MakeActiveClass("Item","index")">
                        <i class="nav-icon fas fa-laptop"></i>
                        <p>
                            Item
                        </p>
                    </a>
                </li>
                <li class="nav-item ">
                    <a asp-controller="SalesPerson" asp-action="Index" class="nav-link @Url.MakeActiveClass("SalesPerson","index")">
                        <i class="nav-icon fas fa-user"></i>
                        <p>
                            User
                        </p>
                    </a>
                </li>
                <li class="nav-item ">
                    <a asp-controller="Warehouse" asp-action="Index" class="nav-link @Url.MakeActiveClass("Warehouse","index")">
                        <i class="nav-icon fas fa-laptop-house"></i>
                        <p>
                            WareHouse
                        </p>
                    </a>
                </li>
                <li class="nav-item ">
                    <a asp-controller="department" asp-action="Index" class="nav-link @Url.MakeActiveClass("Department","index")">
                        <i class="nav-icon fas fa-laptop-house"></i>
                        <p>
                            Department
                        </p>
                    </a>
                </li>

                @if (User.Identity.IsAuthenticated)
        {
            <li class="nav-item ">
                <a asp-controller="Home" asp-action="Privacy" class="nav-link @Url.MakeActiveClass("home","privacy")">
                    <i class="nav-icon fas fa-lock"></i>
                    <p>
                        Privacy
                    </p>
                </a>
            </li>
        }
            </ul>
        </nav>
    </div>
</aside>
<style>
    .logo-image {
        width: 240px !important;
        background: white !important;
    }
</style>