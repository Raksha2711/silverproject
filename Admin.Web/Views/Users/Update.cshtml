@model RegisterViewModel

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1><i class="fas fa-chart-pie mr-1">Create User </i></h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">Create User</li>
                </ol>
            </div>
        </div>
    </div>
</section>
<div class="content">
    <div class="container-fluid">
        <div class="card card-default">
            <form asp-controller="users" asp-action="edit" method="post">
                <input type="hidden" asp-for="Id" />
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Name</label>
                                <input asp-for="Name" type="text" class="form-control" placeholder="Enter Name" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Email</label>
                                <input asp-for="Email" class="form-control" placeholder="Enter Email" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Role</label>
                                <select type="select" asp-for="Role" asp-items="ViewBag.rolelist" class="form-control">
                                    <option value="0">Select Role</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- /.card-body -->
                <div class="card-footer">
                    <div class="card-tools">
                        <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i>Save</button>
                        @*<button type="submit" class="btn btn-primary" asp-controller="ItemGroup" asp-action="index"><i class="fas fa-times"></i>Cancel</button>*@
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<partial name="_Scripts" />
<partial name="_ValidationScriptsPartial" />